            const offset = currentIndex * itemWidth;
            galleryRow.style.transform = `translateX(-${offset}px)`;
        }

        // Next button functionality
        nextBtn.addEventListener('click', () => {
            if (currentIndex < galleryRow.children.length - visibleItems) {
