    <script>
        // Modal Functions
        function openModal(imageSrc) {
            const modal = document.getElementById("imageModal ");
            const modalImage = document.getElementById("modalImage ");
            modal.style.display = "block "; // Show modal
            modalImage.src = imageSrc; // Set image source
        }

        function closeModal() {
            const modal = document.getElementById("imageModal ");
            modal.style.display = "none "; // Hide modal
        }

        // Intersection Observer for Scroll Animation
        document.addEventListener('DOMContentLoaded', () => {
                const sections = document.querySelectorAll('.section');
                const observerOptions = {
                    root: null, // Use the viewport as the root
                    rootMargin: '0px',
                    threshold: 0.1 // Trigger when 10% of the section is visible
                };
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                        } else {
                            entry.target.classList.remove('visible');
                        }
                    });
                }, observerOptions);
                sections.forEach(section => {
                    observer.observe(section);
                });
            }

        );
        // AOS Animation Initialization
        AOS.init({
                duration: 1000, // Animation duration in milliseconds
                offset: 200, // Offset from the original trigger point
                easing: 'ease', // Animation easing function
            }

        );
        // Show Custom Location Field Function
        function showCustomLocationField() {
            const select = document.getElementById('pickup-location');
            const customRegion = document.getElementById('custom-region');
            customRegion.style.display = select.value ? 'block' : 'none';
        }

        document.addEventListener("DOMContentLoaded ", function() {
                const elements = document.querySelectorAll('.text-section, .image-section img, .service-item, .car-card, .icon, .gallery-item, .support-section h2, .support-section p, .support-call-to-action');

                function animateOnScroll() {
                    elements.forEach((el) => {
                        const rect = el.getBoundingClientRect();
                        if (rect.top <= window.innerHeight * 0.8) {
                            el.style.opacity = 1;
                            el.style.animationPlayState = 'running';
                        }
                    });
                }
                window.addEventListener('scroll', animateOnScroll);
                animateOnScroll(); // Initial check
            }

        );
        // Toggle modal visibility
        function toggleModal() {
            const modal = document.getElementById('bookingModal');
            modal.style.display = modal.style.display === 'block' ? 'none' : 'block';
        }

        // Close modal when clicking outside it
        window.onclick = function(event) {
            const modal = document.getElementById('bookingModal');
            if (event.target === modal) {
                modal.style.display = "none ";
            }
        }

        ;
        // Show custom location field
        function showCustomLocationField() {
            const selectElement = document.querySelector("select[name='pickupLocation' ] ");
            const customLocationField = document.getElementById('customLocationField');
            const modalCustomLocationField = document.getElementById('modalCustomLocationField');
            if (selectElement.value === "custom ") {
                customLocationField.style.display = "block ";
                modalCustomLocationField.style.display = "block ";
            } else {
                customLocationField.style.display = "none ";
                modalCustomLocationField.style.display = "none ";
            }
        }






        const cars = <%- JSON.stringify(cars) %>; // Get the cars array from EJS
        const carGrid = document.getElementById('car-grid');
        const loadMoreButton = document.getElementById('load-more');
        const itemsPerPage = 4; // Number of items to display at once
        let currentIndex = 0; // Track the current index of displayed cars

        // Function to render cars based on the current index
        function renderCars() {
            // Clear existing cars in the grid
            carGrid.innerHTML = '';

            // Calculate the range of cars to display
            const start = currentIndex * itemsPerPage;
            const end = start + itemsPerPage;
            const carsToDisplay = cars.slice(start, end);

            // Append cars to the grid
            carsToDisplay.forEach(car => {
                const carCard = document.createElement('div');
                carCard.className = 'car-card';
                carCard.innerHTML = `
                <img src="${car.carImage}" alt="${car.carName}" class="car-image" />
                <h3>${car.carName}</h3>
                <p class="price">$${car.carPrice} FROM / DAY</p>
                <p class="description">${car.carDescription}</p>
                <div class="rating">⭐⭐⭐⭐⭐</div>
                <button onclick="alert('Booking ${car.carName}!')" class="book-now">Book Now</button>
            `;
                carGrid.appendChild(carCard);
            });

            // Update button visibility
            document.getElementById('prev-btn').style.display = currentIndex === 0 ? 'none' : 'inline-block';
            document.getElementById('next-btn').style.display = end >= cars.length ? 'none' : 'inline-block';

            // Hide load more button if all cars are displayed
            loadMoreButton.style.display = end >= cars.length ? 'none' : 'block';
        }

        // Load cars initially
        renderCars();

        // Add event listeners for navigation buttons
        document.getElementById('prev-btn').addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
                renderCars();
            }
        });

        document.getElementById('next-btn').addEventListener('click', () => {
            if ((currentIndex + 1) * itemsPerPage < cars.length) {
                currentIndex++;
                renderCars();
            }
        });

        // Load more cars on button click
        loadMoreButton.addEventListener('click', () => {
            if (currentIndex * itemsPerPage < cars.length) {
                currentIndex++;
                renderCars();
            }
        });





        const galleryRow = document.getElementById('gallery-row');
        const images = <%- JSON.stringify(images) %>; // Get the images array from EJS
        const itemsPerPage = 3; // Adjust this based on how many items you want visible
        let currentGalleryIndex = 0; // Track the current index of displayed images

        // Function to render images based on the current index
        function renderGallery() {
            // Calculate the range of images to display
            const start = currentGalleryIndex * itemsPerPage;
            const end = start + itemsPerPage;
            const imagesToDisplay = images.slice(start, end);

            // Clear existing images in the gallery
            galleryRow.innerHTML = '';

            // Append images to the gallery row
            imagesToDisplay.forEach(image => {
                const galleryItem = document.createElement('div');
                galleryItem.className = 'col-md-4 mb-4 gallery-item';
                galleryItem.onclick = () => openModal(image.path);
                galleryItem.innerHTML = `<img src="${image.path}" class="img-fluid" alt="Eco Image">`;
                galleryRow.appendChild(galleryItem);
            });

            // Update button visibility
            document.getElementById('gallery-prev-btn').style.display = currentGalleryIndex === 0 ? 'none' : 'inline-block';
            document.getElementById('gallery-next-btn').style.display = end >= images.length ? 'none' : 'inline-block';
        }

        // Load images initially
        renderGallery();

        // Add event listeners for gallery navigation buttons
        document.getElementById('gallery-prev-btn').addEventListener('click', () => {
            if (currentGalleryIndex > 0) {
                currentGalleryIndex--;
                renderGallery();
            }
        });

        document.getElementById('gallery-next-btn').addEventListener('click', () => {
            if ((currentGalleryIndex + 1) * itemsPerPage < images.length) {
                currentGalleryIndex++;
                renderGallery();
            }
        });



        const reviews = document.querySelectorAll('.review'); // Get all review elements
        const totalReviews = reviews.length;
        const reviewsPerPage = 4; // Number of reviews to show at once
        let currentIndex = 0; // Current index of the review being displayed

        // Function to display reviews
        function displayReviews() {
            // Hide all reviews first
            reviews.forEach((review, index) => {
                review.classList.remove('active'); // Remove active class to hide
                if (index >= currentIndex && index < currentIndex + reviewsPerPage) {
                    review.classList.add('active'); // Show active reviews
                }
            });

            // Update button states
            document.getElementById('prev-btn').disabled = currentIndex === 0;
            document.getElementById('next-btn').disabled = currentIndex + reviewsPerPage >= totalReviews;
        }

        // Event listeners for navigation buttons
        document.getElementById('prev-btn').addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex -= reviewsPerPage; // Decrease index to show previous reviews
                if (currentIndex < 0) currentIndex = 0; // Prevent going out of bounds
                displayReviews();
            }
        });

        document.getElementById('next-btn').addEventListener('click', () => {
            if (currentIndex + reviewsPerPage < totalReviews) {
                currentIndex += reviewsPerPage; // Increase index to show next reviews
                if (currentIndex >= totalReviews) currentIndex = totalReviews - reviewsPerPage; // Prevent going out of bounds
                displayReviews();
            }
        });

        // Initial display of reviews
        displayReviews();
    </script>


