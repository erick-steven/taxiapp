  <script>
    document.addEventListener('DOMContentLoaded', () => {
      let currentIndex = 0;
      const reviewItems = document.querySelectorAll('.review-item');
      const totalReviews = reviewItems.length;
  
      function showReview(index) {
        reviewItems.forEach(item => item.classList.remove('visible'));
        reviewItems[index].classList.add('visible');
      }
  
      function rotateReview() {
        currentIndex = (currentIndex + 1) % totalReviews;
        showReview(currentIndex);
      }
  
      if (totalReviews > 1) {
        showReview(currentIndex); // Show first review initially
        setInterval(rotateReview, 4000); // Rotate every 4 seconds
      }
    });
  </script>
  
