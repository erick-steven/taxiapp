        // Function to show the current review
        function showReview(index) {
            reviews.forEach((review, i) => {
                review.classList.remove('visible'); // Hide all reviews
                if (i === index) {
                    review.classList.add('visible'); // Show the current review
                }
            });
        }

        // Function to cycle through reviews
        function cycleReviews() {
            showReview(currentReviewIndex);
            currentReviewIndex = (currentReviewIndex + 1) % totalReviews; // Increment index and wrap around
        }

        // Initially show the first review
        showReview(currentReviewIndex);

        // Cycle through reviews every 5 seconds
